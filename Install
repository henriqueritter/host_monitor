sudo apt-get update
apt-get install apache2 mysql php git python2.7 python-pip /y

pip install mysql-connector-python


mkdir /tmp/host_monitor
cd /tmp/host_monitor

git clone https://github.com/henriqueritter/host_monitor

> hosts_status.log
chmod 777 hosts_status.log
mv hosts_status.log /var/log/hosts_status.log


sudo mkdir /etc/host_monitor
sudo mkdir /var/www/html/monitor


sudo mv /tmp/host_monitor/python/* /etc/host_monitor/python/*
sudo mv /tmp/host_monitor/php/* /var/www/html/monitor

sudo mysql -u root -p < /tmp/host_monitor/mysql/ping.sql
